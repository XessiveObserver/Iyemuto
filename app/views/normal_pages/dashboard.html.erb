<div>    
    <% if publisher_signed_in? %>
        <div>
            <%= image_tag (current_publisher.profile_picture), alt: "profile", class: "rounded-full h-32 w-32" %>
        </div>
        <div>
            <%= current_publisher.username %>
        </div>
        <div>
            <%= current_publisher.email %>
        </div>
        <div>
            <%= current_publisher.bio %>
        </div>

    <% end %>

    <div>
        <% if current_publisher %>            
        <%= link_to "New Article",
        new_article_path, class: 
        "py-2 text-green-500 p-1 border border-green-500" %>
        <%= link_to "Show Articles",
            articles_path, class: 
            "py-2 text-green-500 p-1 m-2 border border-green-500" %>
     <% end %>    
    </div>
</div>