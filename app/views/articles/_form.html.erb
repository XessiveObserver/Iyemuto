<%= form_with model: @article do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
    <% @article.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :article_photo %><br>
    <%= form.file_field :article_photo %>
    <% @article.errors.full_messages_for(:article_photo).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  
    <div>
        <%= form.label :content %><br>
        <%= form.rich_text_area :content %><br>
        <% @article.errors.full_messages_for(:content).each do |message| %>
            <div><%= message %></div>
        <% end %>
    </div>
    <div>
      <%= form.label :category %><br>
      <%= form.text_field :category %>
      <% @article.errors.full_messages_for(:category).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>