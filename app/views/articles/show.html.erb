<div class="mx-auto">
    <div class="my-3 font-semibold">
        <h1><%= @article.title %></h1>
    </div>
    <div class="my-3 font-semibold">
        <% if @article.article_photo.attached? %>
            <%= image_tag (@article.article_photo), alt: "profile", class: "rounded w-96 " %>
        <% end %>
    </div>

    <div class="py-3"><%= @article.content %></div>
    <div class="py-3"><%= @article.category %></div>
    <div class="py-3"><%= @article.publisher.username %></div>
    <div class="py-3"><%= @article.created_at %></div>
    
    <div class="border-2 p-5 m-3 border-teal-300 rounded">
        <div class="text-center">
            <% if current_publisher %>
                <%= link_to "Edit Article", edit_article_path(@article), 
                class: "p-1 font-bold rounded text-stone-50  bg-cyan-500
                    hover:text-cyan-500 hover:bg-stone-50 hover:border-2 hover:border-cyan-500" %>
                <%= link_to "Delete Article", article_path(@article), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                }, class: "text-red-100 rounded bg-red-500 p-1 font-bold hover:text-red-500 hover:bg-stone-50 hover:border-2 hover:border-red-500"%>
            <% end %>
        </div>
        
        <div class="py-5 text-center">
            <%= link_to "Back to Articles",
                articles_path, class: 
                " text-sky-500 p-1 border border-sky-500 hover:text-stone-50 hover:bg-sky-500 rounded border-2 font-bold" %>
        </div>
    </div>
</div>