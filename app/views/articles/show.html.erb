<div class="mx-auto max-w-screen-lg">
    <div class="py-3 font-bold uppercase"><span class="bg-sky-500 text-white p-1 rounded"><%= @article.category %></span></div>
    <div class="my-3 font-semibold">
        <h1 class="text-5xl text-sky-400"><%= @article.title %></h1>
        <hr / class="border-t border-sky-100 my-8">
    </div>
    <div class="py-3 font-medium"><span class="bg-sky-400 text-white p-1 rounded"><%= @article.created_at.strftime("%B %d, %Y") %></span></div>
    <div class="my-3 font-semibold p-3">
        <% if @article.article_photo.attached? %>
            <%= image_tag (@article.article_photo), alt: "profile", class: "rounded w-96 mx-auto " %>
        <% end %>
    </div>
    <hr / class="border-t border-sky-100 my-8">
    <div class="py-3 font-bold">
     <span class="bg-black text-white p-1 rounded">
        By:<%= @article.publisher.username %>
     </span>
    </div>

    <div class="py-3"><%= @article.content %></div>
    <div>
        <h3 class="my-2 text-center text-5xl font-sans text-white bg-stone-700 p-2 rounded">More in <%= @article.category %></h3>
                <% if @related_articles.present? %>
                    <% @related_articles.each do |article| %>
                            <div class="p-2 text-center text-2xl font-semibold text-sky-500">
                                <%= link_to article.title, article_path(article) %>
                            
                            <hr />
                                <% if @article.article_photo.attached? %>
                                    
                                        <%= link_to image_tag(article.article_photo.variant(resize_to_limit: [300, nil]),
                                         class: 'article-thumbnail rounded mx-auto p-2'), article %>
                            </div>
                                <% end %>
                    <% end %>
                <% else %>
                        <p>No related articles found.</p>
                <% end %>
    </div>
    
    
        <div class="text-center">
            <% if current_publisher %>
                <%= link_to "Edit Article", edit_article_path(@article), 
                class: "p-1 font-bold rounded text-stone-50  bg-cyan-500
                    hover:text-cyan-500 hover:bg-stone-50 hover:border-2 hover:border-cyan-500" %>
                <%= link_to "Delete Article", article_path(@article), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                }, class: "text-red-100 rounded bg-red-500 p-1 font-bold hover:text-red-500 hover:bg-stone-50 hover:border-2 hover:border-red-500"%>
            <% end %>
        </div>
        
        <div class="py-5 text-center">
            <%= link_to "Back to Articles",
                articles_path, class: 
                " text-sky-500 p-1 border border-sky-500 hover:text-stone-50 hover:bg-sky-500 rounded border-2 font-bold" %>
        </div>
    
</div>